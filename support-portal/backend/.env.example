# Environment Configuration for Support Portal Backend
# Copy this file to .env and update with your actual values

# Database Configuration
# DATABASE_URL=postgresql://username:password@localhost:5432/support_portal
DATABASE_URL=
SQLITE_DB_PATH=support_portal.db

# AWS S3 Configuration (optional - will use local storage if not provided)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET_NAME=

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_FOLDER=uploads

# Authentication (for development)
DEFAULT_USER_ID=demo-user

# Server Configuration
PORT=8000
DEBUG=true